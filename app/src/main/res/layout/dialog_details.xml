<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/uhead"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/map_image"
            android:scaleType="fitXY"
            android:src="@drawable/uhead" />

        <LinearLayout
            android:id="@+id/cmiddle"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/uhead"
            android:layout_alignParentBottom="true"
            android:background="#0E170D"
            android:gravity="center|top"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/nstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="State Name"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:divider="@drawable/space"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/dcase"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:text="TOTAL CONFIRMED"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/dcaseno"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:text="00"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:divider="@drawable/space"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/ddis"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bgd"
                    android:text="DISCHARGED"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/ddisno"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bgd"
                    android:text="00"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/space"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/ddea"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bgr"
                    android:text="DEATHS"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/ddeano"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bgr"
                    android:text="00"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ubott"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/map_image"
            android:src="@drawable/ubottom" />
    </RelativeLayout>
</layout>